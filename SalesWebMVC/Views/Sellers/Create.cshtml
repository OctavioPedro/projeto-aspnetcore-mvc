@model SalesWebMVC.Models.Seller

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="name" class="custom-control-label text-capitalize"></label>
                <input asp-for="name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="email" class="custom-control-label text-capitalize"></label>
                <input asp-for="email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="birthDate" class="custom-control-label text-capitalize"></label>
                <input asp-for="birthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="baseSalary" class="custom-control-label text-capitalize"></label>
                <input asp-for="baseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />  
            </div>
        </form>
    </div>
</div>